{
  "name": "mfer",
  "version": "2.1.1",
  "description": "CLI tool designed to sensibly run micro-frontends from the terminal.",
  "bin": {
    "mfer": "dist/index.js"
  },
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts && prettier --check .",
    "lint:fix": "eslint . --ext .ts --fix && prettier --write ."
  },
  "keywords": [
    "micro frontends",
    "micro frontend",
    "microfrontend",
    "micro-frontend",
    "micro-frontends",
    "mfe",
    "CLI",
    "runner"
  ],
  "author": "Stuart Rimel",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srimel/mfer.git"
  },
  "bugs": {
    "url": "https://github.com/srimel/mfer/issues"
  },
  "homepage": "https://github.com/srimel/mfer#readme",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.5.3",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "concurrently": "^9.2.0",
    "yaml": "^2.8.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
